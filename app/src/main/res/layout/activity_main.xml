<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical">
            <!--HEADER-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WaterWay"
                    android:layout_weight="1"
                    android:textColor="@color/brand_Color"
                    android:fontFamily="@font/open_bold"
                    android:textSize="24sp"
                    android:layout_margin="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/settings"
                        android:background="@drawable/ripple_white"
                        android:layout_margin="12dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--CARDS-->
            <LinearLayout
                android:id="@+id/cardParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/motorCardParent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/card_transp_red"
                        android:elevation="5dp"
                        android:layout_margin="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:id="@+id/motorVariantRed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical">
                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/engine_variant"
                                    android:background="@android:color/transparent"
                                    android:layout_marginRight="8dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/motor_Title"
                                    android:textColor="@color/warning"
                                    android:fontFamily="@font/open_bold"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Apagado"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/open_semibold"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/motorVariantBlue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical">
                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/engine"
                                    android:background="@android:color/transparent"
                                    android:layout_marginRight="8dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/motor_Title"
                                    android:textColor="@color/brand_Color"
                                    android:fontFamily="@font/open_bold"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Apagado"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/open_semibold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/card_transp_blue"
                        android:elevation="5dp"
                        android:layout_margin="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/solids"
                                android:background="@android:color/transparent"
                                android:layout_marginRight="8dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/solids_Title"
                                android:textColor="@color/brand_Color"
                                android:fontFamily="@font/open_bold"/>

                            <TextView
                                android:id="@+id/txtSolids"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0mg/L"
                                android:textColor="@color/white"
                                android:fontFamily="@font/open_semibold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/card_transp_blue"
                        android:elevation="5dp"
                        android:layout_margin="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_ph_icon"
                                android:background="@android:color/transparent"
                                android:layout_marginRight="8dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ph_Title"
                                android:textColor="@color/brand_Color"
                                android:fontFamily="@font/open_bold"/>

                            <TextView
                                android:id="@+id/txtPh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Valor: 0"
                                android:textColor="@color/white"
                                android:fontFamily="@font/open_semibold"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/card_transp_blue"
                        android:elevation="5dp"
                        android:layout_margin="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/water_level"
                                android:background="@android:color/transparent"
                                android:layout_marginRight="8dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/level_Title"
                                android:textColor="@color/brand_Color"
                                android:fontFamily="@font/open_bold"/>

                            <TextView
                                android:id="@+id/txtLevel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/white"
                                android:fontFamily="@font/open_semibold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    <!--PH_CHART-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VariaciÃ³n de ph"
            android:fontFamily="@font/open_semibold"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_margin="6dp"/>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/phBarChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>
    </LinearLayout>
    <!--WATER_CHART-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:elevation="15dp"
        android:background="@drawable/card_blue_rounded">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad de agua saneada"
            android:fontFamily="@font/open_semibold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_margin="6dp"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/waterQt_Chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="4"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1D"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/open_regular"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_regular"
                android:text="1S"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/brand_Color"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/selected_option"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1M"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/open_regular"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3M"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/open_regular"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1A"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/open_regular"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>